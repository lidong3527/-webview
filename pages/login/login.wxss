body{
   background: #F0EFF6;
}
.accountBind_box {
  width: 100%;
  height: 1000rpx;
  background: #F0EFF6;
  margin: 0 auto;
}

.accountBind_image {
  width: 100%;
  padding-bottom: 90rpx;
  /* background: red; */
  position: relative;
}

.accountBind_img_box {
  width: 140rpx;
  height: 140rpx;
  overflow: hiddne;
  border-radius: 50%;
  padding: 60rpx 0 40rpx;
  margin: 0 auto;
}

.accountBind_img_box image {
  width:  100%;
  height:  100%;
}

.accountBind_form {
  width: 100%;
  /* background: yellow; */
  padding: 0 40rpx;
  box-sizing: border-box;
}
.inputCont{
  position: relative;
  height: 90rpx;
  line-height: 90rpx;
}
input {
  margin-top: 30rpx;
  padding-left: 120rpx;
  padding-right: 40rpx;
  /* position: relative; */
  font-size: 28rpx;
  overflow: inherit;
  background-color: white;
  height: 90rpx;
  line-height: 90rpx;
  }

.obtainCode {
  position: absolute;
  top: 50%;
  right: 10rpx;
  font-size: 25rpx;
  transform: translateY(-50%);
  color: #999;
  z-index: 999;
}

.input_image {
  position: absolute;
  top: 50%;
  left: 30rpx;
  width:36rpx;
  height:40rpx;
  display: block;
  transform: translateY(-50%);
  
}

.accountBind_btn {
  margin-top: 100rpx;
  width: 100%;
  color: white;
  background: #4285F4;
  letter-spacing: 10rpx;
  font-size: 32rpx;
  height: 90rpx;
  line-height: 90rpx;
  overflow: inherit;
  border-radius:4px;

}

/* 按钮形态转换 */

.accountBind_btn_change {
  margin-top: 135rpx;
  width: 500rpx;
  height: 10rpx;
  color: white;
  background: #999;
  letter-spacing: 10rpx;
  font-size: 30rpx;
  /* transition: 0.8s; */
  overflow: inherit;
  animation: btn_change 1.5s;
}
.accountBind_btn_change::after{
  content: '';
  display: inline-block;
  width: 200%;
  height: 200%;
  background: #4285F4;
  animation: line_animation 3s;
  border-radius: 30rpx;
}

@keyframes line_animation{
  0%{
    width: 0%;
  }
  100%{
    width: 200%;
  }
}

@keyframes btn_change {
  0% {
    margin-top: 100rpx;
    height: 80rpx;
    width: 400rpx;
    color: white;
    background: #5b8cf3;
  }

  30% {
    margin-top: 135rpx;
    height: 10rpx;
    background: gray;
    color: black;
  }

  100% {
    width: 500rpx;
  }
}

.btn_text {
  color: black;
  transition-property: color;
  transition: 0.8s;
  position: relative;
  transform: translateY(80rpx);
  /* margin-top: 100rpx; */
  display: inline-block;
}

.input_palceholder {
  position: absolute;
  font-size: 25rpx;
  color: #999;
  top: 30%;
  left: 70rpx;
  transform: translateY(-50%);
}

.input_palceholder_focus {
  position: absolute;
  font-size: 25rpx;
  color: #999;
  top: 30%;
  left: 70rpx;
  transform: translate(-70rpx, -60rpx);
  transition: 0.8s;
}

.title{
  width: 100%;
  text-align: center;
  font-size: 32rpx;
  color: #333;
}
